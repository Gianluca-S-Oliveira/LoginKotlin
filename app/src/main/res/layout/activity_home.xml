<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/verde"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OLÁ! SEJA BEM VINDO!"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:drawableRight="@drawable/search"
            android:padding="8dp"
            android:gravity="center_vertical"

            />





    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"

        android:text="Transforme ações em impacto. Adote Práticas da ESG+ e seja recompensado em nossa empresa!"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"

        android:padding="10dp">

        <TextView
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity=""
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/horta"
            android:text="Cultivo de Horta Doméstica"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/inputs" />

        <TextView
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity=""
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/lixo"
            android:text="Separação de Lixo Para Reciclagem"
            android:padding="8dp"
    android:layout_marginLeft="30px"

            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/inputs" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"

        android:padding="10dp">

        <TextView
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity=""
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/comida_saudavel"
            android:text="Hábitos Alimentares Saudáveis"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/inputs" />

        <TextView
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity=""
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/luz"
            android:text="Economia Inteligente de Energia"
            android:padding="8dp"
            android:layout_marginLeft="30px"

            android:gravity="center"
            android:textSize="15dp"
            android:background="@drawable/inputs" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:background="@drawable/background_button"
        android:layout_marginTop="100px"
        android:layout_marginEnd="16dp"
        android:paddingHorizontal="30dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Começar a Contribuir" />
</LinearLayout>